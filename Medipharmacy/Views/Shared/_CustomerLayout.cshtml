<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Medipharmacy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/script.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</head>
<body>
    
    <header class="fixed-top">
        <nav class="navbar navbar-expand-lg navbar-light" style="background-image: repeating-linear-gradient(to bottom right, white, blue)">
            <div class="container">
                <a class="navbar-brand" href="~/">
                    <h1><strong>Medi-Pharm</strong></h1>
                </a>
                <hr />
                <a class="navbar-toggler"><i class="fas fa-shopping-bag"></i></a>
                <a class="navbar-toggler"><i class="fas fa-user"></i></a>
                <a class="navbar-toggler" href="#" data-bs-toggle="collapse" data-bs-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon" data-bs-toggle="tooltip" data-bs-placement="bottom" title="view menu"></span>
                </a>
                <div class="collapse navbar-collapse" id="navbar">
                    <ul class="navbar-nav d-flex ms-auto mb-2 mb-lg-0" id="nav-list">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle mx-2" href="#" id="categories" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-th-list"></i> Categories</a>
                            <ul class="dropdown-menu bg-light" aria-labelledby="categories">
                                <li><a class="dropdown-item" href="#">Category 1</a></li>
                                <li><a class="dropdown-item" href="#">Category 2</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle mx-2" href="#" id="brands" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-tags"></i> Brands</a>
                            <ul class="dropdown-menu bg-light" aria-labelledby="brands">
                                <li><a class="dropdown-item" href="#">Brand 1</a></li>
                                <li><a class="dropdown-item" href="#">Brand 2</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-2" href="javascript:void()" onclick="togglecart()"><i class="fas fa-shopping-bag" data-bs-toggle="tooltip" data-bs-placement="bottom" title="shopping cart"></i> Cart</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-2" href="#"><i class="fas fa-user" data-bs-toggle="tooltip" data-bs-placement="bottom" title="account"></i> Account</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container" style="margin-top: 105px">
        <div class="row mb-4">
            <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active bg-dark" aria-current="true" aria-label="Slide 1"></button>
                    <button class="bg-dark" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button class="bg-dark" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner rounded">
                    @for (int i = 0; i < 5; i++)
                    {
                        <div class="carousel-item active">
                            <img src="~/img/carousel/carousel-1200x500.png" class="d-block w-100" alt="..." />
                            <div class="carousel-caption d-none d-md-block text-info">
                                <h5>Label Number @(i+1)</h5>
                                <p>Some representative placeholder content for the first slide.</p>
                            </div>
                        </div>
                    }
                </div>
                <script>
                    $(document).ready(function () {
                        $("#carouselExampleCaptions").carousel();
                    });
                </script>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden ">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true" style="color: dimgray"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>

        <div class="row">
            <div class="col" id="main">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

            <div class="col-5 fixed-top" id="cart" style="display: none; transition: 0.1s">
                <div class="card" style="background-image: repeating-linear-gradient(to bottom right, lightblue, greenyellow)">
                    <div class="card-header">
                        <div class="row">
                            <div class="col">
                                <h5>Cart</h5>
                            </div>
                            <div class="col text-end">
                                <button class="btn-sm btn-close" onclick="togglecart()" data-bs-toggle="tooltip" data-bs-placement="bottom" title="close"></button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm table-hover table-response">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Product</th>
                                    <th>Items</th>
                                    <th>Sub Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>Panado</td>
                                    <td>1</td>
                                    <td>R 12.99</td>
                                    <td class="text-end">
                                        <a href="#" class="mx-1 text-info" data-bs-toggle="tooltip" data-bs-placement="bottom" title="add"><i class="fas fa-plus"></i></a>
                                        <a href="#" class="mx-1 text-danger" data-bs-toggle="tooltip" data-bs-placement="bottom" title="remove"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>Grand-Pa</td>
                                    <td>12</td>
                                    <td>R 97.99</td>
                                    <td class="text-end">
                                        <a href="#" class="mx-1 text-info" data-bs-toggle="tooltip" data-bs-placement="bottom" title="add"><i class="fas fa-plus"></i></a>
                                        <a href="#" class="mx-1 text-danger" data-bs-toggle="tooltip" data-bs-placement="bottom" title="remove"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>3</td>
                                    <td>Panado</td>
                                    <td>1</td>
                                    <td>R 12.99</td>
                                    <td class="text-end">
                                        <a href="#" class="mx-1 text-info" data-bs-toggle="tooltip" data-bs-placement="bottom" title="add"><i class="fas fa-plus"></i></a>
                                        <a href="#" class="mx-1 text-danger" data-bs-toggle="tooltip" data-bs-placement="bottom" title="remove"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="row">
                            <div class="col-8 col-sm">
                                <h7>Items</h7>
                            </div>
                            <div class="col-4 col-sm text-end">
                                <h7 class="text-muted">14</h7>
                            </div>
                            <div class="col-12">
                                <hr style="margin: 0" />
                            </div>

                            <div class="col-8 col-sm">
                                <h7>Total</h7>
                            </div>
                            <div class="col-4 col-sm text-end">
                                <h7 class="text-muted">R 359.99</h7>
                            </div>
                            <div class="col-12">
                                <hr style="margin: 0" />
                            </div>

                            <div class="col-8 col-sm">
                                <h7>Vat</h7>
                            </div>
                            <div class="col-4 col-sm text-end">
                                <h7 class="text-muted">R 47.99</h7>
                            </div>
                            <div class="col-12">
                                <hr style="margin: 0" />
                            </div>

                            <div class="col-8 col-sm">
                                <h7>Total Due</h7>
                            </div>
                            <div class="col-4 col-sm text-end">
                                <h7 class="text-muted">R 417.98</h7>
                            </div>
                            <div class="col-12">
                                <hr style="margin: 0" />
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col col-sm">
                                <button class="btn btn-sm btn-warning w-100" onclick="togglecart()" data-bs-toggle="tooltip" data-bs-placement="bottom" title="close">Close</button>
                            </div>
                            <div class="col col-sm">
                                <button class="btn btn-sm btn-info w-100" data-bs-toggle="tooltip" data-bs-placement="bottom" title="checkout">Checkout</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <footer class="border-top footer text-muted mt-2">
        <div class="container">
            &copy; @DateTime.Now.Year - Medipharmacy - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

</body>
</html>